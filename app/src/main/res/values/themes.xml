<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AntiSihr" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize8Percent" parent="">
        <item name="cornerSize">8%</item>
    </style>

    <style name="myActiveIndicatorColor" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/main_color</item>
        <item name="android:width">44dp</item>
        <item name="android:height">44dp</item>
    </style>

    <style name="myEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_rect_15</item>
        <item name="android:backgroundTint">@color/et_background</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:fontFamily">@font/nunito_ttf</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:textColor">@color/et_text_color</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="myButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_rect_15</item>
        <item name="android:backgroundTint">@color/main_color</item>
        <item name="android:fontFamily">@font/nunito_bold_ttf</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>