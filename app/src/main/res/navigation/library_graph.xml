<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/library_screen">


    <fragment
        android:id="@+id/library_screen"
        android:name="dev.djakonystar.antisihr.ui.library.LibraryScreen"
        android:label="LibraryScreen"
        tools:layout="@layout/screen_library">

        <action
            android:id="@+id/action_library_screen_to_inner_library_screen"
            app:destination="@id/inner_library_screen" />
    </fragment>

    <fragment
        android:id="@+id/inner_library_screen"
        android:name="dev.djakonystar.antisihr.ui.library.InnerLibraryScreen"
        android:label="InnerLibraryScreen"
        tools:layout="@layout/screen_inner_library">
        <action
            android:id="@+id/action_inner_library_screen_to_bottom_article_dialog"
            app:destination="@id/bottom_article_dialog" />

        <argument
            android:name="id"
            app:argType="integer" />

        <argument
            android:name="name"
            app:argType="string" />

        <argument
            android:name="description"
            app:argType="string" />


        <argument
            android:name="isFavourite"
            app:argType="boolean" />

    </fragment>

    <dialog
        android:id="@+id/bottom_article_dialog"
        android:name="dev.djakonystar.antisihr.ui.library.dialog.ArticleDetailBottomFragment"
        android:label="ArticleBottomSheetDialog"
        tools:layout="@layout/bottom_article_info">

        <argument
            android:name="id"
            app:argType="integer" />

        <argument
            android:name="isBookmarked"
            app:argType="boolean" />
    </dialog>


</navigation>