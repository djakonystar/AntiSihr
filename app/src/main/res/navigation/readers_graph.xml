<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/readers_screen">


    <fragment
        android:id="@+id/readers_screen"
        android:name="dev.djakonystar.antisihr.ui.readers.ReadersScreen"
        android:label="ReadersScreen"
        tools:layout="@layout/screen_readers">
        <action
            android:id="@+id/action_readers_screen_to_reader_detail_dialog"
            app:destination="@id/reader_detail_dialog" />
    </fragment>

    <dialog
        android:id="@+id/reader_detail_dialog"
        android:name="dev.djakonystar.antisihr.ui.readers.dialog.ReaderDetailBottomFragment"
        android:label="ReaderDetailBottomFragment"
        tools:layout="@layout/bottom_reader_info">
        <argument
            android:name="readerId"
            app:argType="integer" />
    </dialog>


</navigation>